<div class="modal fade" id="loginModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">x</button>
        <h2>Login</h2>
      </div>
      <div class="modal-body">
        <%= form_for(resource, :as => resource_name, :url => user_session_path(), :class => "form-horizontal") do |f| %>
            <div class="form-group">
              <%= f.label :email, class: "control-label col-sm-2" %>
              <div class="col-sm-10">
                <%= f.email_field :email, :autofocus => true, class: "form-control " %>
              </div>
            </div>
            <div class="row padding-top-bottom"></div>
            <div class="form-group">
              <%= f.label :password, class: "control-label col-sm-2" %>
                <div class="col-sm-10">
                  <%= f.password_field :password, class: "form-control" %>
              </div>
            </div>
            <div class="row padding-top-bottom"></div>
            <div class="form-group">
              <% if devise_mapping.rememberable? -%>
                  <div class="col-sm-offset-2 col-sm-10">
                    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
                  </div>
              <% end %>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "Log In", :class => 'btn btn-small btn-success' %>
              </div>
            </div>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>

