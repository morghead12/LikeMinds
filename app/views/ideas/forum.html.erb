<h1>Browse Ideas</h1>
    <% @ideas.each do |idea| %>
    <div class="col-xs-2"><%= image_tag idea.user.avatar.url(:thumb) %></div>
    <div class="col-xs-2"><td>Title: <%= idea.title %></td></div>
        <div class="-col-xs-6">
            <%= hidden_field_tag idea.id %>
            <% if (idea.category.blank?) %>
                <h3>Category: Unknown</h3>
            <% else %>
                <h3>Category:  <%= idea.category %></h3>
            <% end %>
        </div>
        <div class="col-xs-12">
            <p class="show-less">
              <%= idea.content.truncate_words(10) %>
              <a class="show-text">Show more</a>
            </p>
            <p class="show-more">
              <%= idea.content[0..10] %>
            <a class="hide-text">Show less</a>
              </p>
          <%= link_to "I'm Interested", idea_path(idea), class: 'btn btn-primary' %>
        </div>
  <% end %>